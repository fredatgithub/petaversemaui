<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:petaverse.frontend.mauiapp"
             
             x:Name="root"
             x:DataType="app:PetaverseThumbnailContentView"
             x:Class="petaverse.frontend.mauiapp.PetaverseThumbnailContentView">

    <Frame Padding="0"
           CornerRadius="4"
           HasShadow="True">
        <Image WidthRequest="310"
               HeightRequest="350"
               Aspect="AspectFill"
               Source="{x:Binding ComponentData.ThumbnailUrl, Source={x:Reference root}}"/>
    </Frame>
</ContentView>
