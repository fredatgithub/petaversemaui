<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:PetaverseMAUI"
             
             x:Name="root"
             x:DataType="app:PetaverseThumbnailContentView"
             x:Class="PetaverseMAUI.PetaverseThumbnailContentView">

    <Frame Padding="0"
           CornerRadius="4"
           HasShadow="True">
        <Image WidthRequest="200"
           HeightRequest="300"
           Aspect="AspectFill"
           Source="{x:Binding ComponentData.ThumbnailUrl, Source={x:Reference root}}"/>
    </Frame>
</ContentView>
